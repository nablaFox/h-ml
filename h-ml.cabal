					              Utils.KDTree
    build-depends:      base ^>=4.17.2.1, random ^>=1.2
    hs-source-dirs:     src
    default-language:   Haskell2010

executable PolyRegr
	import:           warnings
	main-is:          Ex1.hs
	hs-source-dirs:   examples
	build-depends: 	  base, h-ml, random
	default-language: Haskell2010
