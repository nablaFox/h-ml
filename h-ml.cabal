maintainer:         a.finex04@gmail.com
category:           Math
build-type:         Simple

common warnings
    ghc-options: -Wall -Wno-type-defaults

library
    import:             warnings
    exposed-modules:    ML.KNN
				                ML.PolyRegr
                        ML.Model
                        Utils.Math
